<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="painMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox fx:id="paneTop" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblHeading" text="Order your Pizza Now!">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Label>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding></HBox>
   </top>
   <center>
      <VBox fx:id="paneCenter" prefHeight="431.0" prefWidth="537.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="paneCustomer" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <HBox fx:id="paneName" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Label fx:id="lblName" text="Name">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin></Label>
                        <TextField fx:id="txtName" promptText="Enter the customer's name here">
                           <HBox.margin>
                              <Insets left="60.0" />
                           </HBox.margin></TextField>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </HBox>
                  <HBox fx:id="panePhone" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                     <children>
                        <Label fx:id="lblPhone" text="Phone Number" />
                        <TextField fx:id="txtPhone" promptText="Enter the customer's phone number here !">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox fx:id="paneAddress" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                     <children>
                        <Label fx:id="lblAddress" text="Address" />
                        <TextField fx:id="txtAddress" promptText="Enter the customer's address here">
                           <HBox.margin>
                              <Insets left="50.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox fx:id="paneOrder" prefHeight="202.0" prefWidth="600.0" spacing="50.0">
               <children>
                  <VBox fx:id="paneSize" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label fx:id="lblSize" text="Size" />
                        <RadioButton fx:id="rdoSmall" mnemonicParsing="false" text="Small">
                           <toggleGroup>
                              <ToggleGroup fx:id="groupSize" />
                           </toggleGroup></RadioButton>
                        <RadioButton fx:id="rdoMedium" mnemonicParsing="false" selected="true" text="Medium" toggleGroup="$groupSize" />
                        <RadioButton fx:id="rdoLarge" mnemonicParsing="false" text="Large" toggleGroup="$groupSize" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="paneCrust" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                     <children>
                        <Label fx:id="lblCrust" text="Crust" />
                        <RadioButton fx:id="rdoThin" mnemonicParsing="false" selected="true" text="Thin">
                           <toggleGroup>
                              <ToggleGroup fx:id="groupCrust" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rdoThick" mnemonicParsing="false" text="Thick" toggleGroup="$groupCrust" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children></VBox>
   </center>
</BorderPane>
